<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Publishers</th>
      <th>Expansion to</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game  %></td>
        <td><%= game.year %></td>
        <td><%= game.publishers.collect {|p| p.name }.join(', ') %></td>
        <td><%= game.expansion_to.name unless game.expansion_to.nil?  %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @games %>

<br>

<%= link_to 'New Game', new_game_path %>
