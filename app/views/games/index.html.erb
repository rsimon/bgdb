<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Publisher</th>
      <th>Author</th>
      <th>Expansion to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game  %></td>
        <td><%= link_to game.publisher.name, game.publisher %></td>
        <td><%= game.author.nil? ? '' :  link_to(game.author.name, game.author) %></td>
        <td><%= game.expansion_to %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @games %>

<br>

<%= link_to 'New Game', new_game_path %>
