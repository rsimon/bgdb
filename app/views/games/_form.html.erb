
<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </div>

  Publishers:
  <ul>
    <%= f.fields_for :productions do |pf| %>
      <li>
        <%= pf.label :name %>
        <%= pf.collection_select :publisher_id, Publisher.all, :id, :name %>
      </li>
    <% end %>
  </ul>

  Authors:
  <ul>
    <%= f.fields_for :authorships do |af| %>
      <li>
        <%= af.label :name %>
        <%= af.collection_select :author_id, Author.all, :id, :name %>
      </li>
    <% end %>
  </ul>

  <div class="field">
    <%= f.label :expansion_to_id %><br>
    <%= f.collection_select :expansion_to_id, Game.all, :id, :name, :include_blank => 'None' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
