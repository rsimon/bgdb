<p id="notice"><%= notice %></p>

<h1>Listing Publishers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Homepage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td><%= publisher.homepage %></td>
        <td class="icon"><%= link_to raw('&#xf06e;'), publisher %></td>
        <td class="icon"><%= link_to raw('&#xf040;'), edit_publisher_path(publisher) %></td>
        <td class="icon"><%= link_to raw('&#xf00d;'), publisher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publisher', new_publisher_path %>
